{
  "name": "patro-house",
  "version": "1.0.0",
  "description": "Complete End-to-End E-commerce Application",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "nodemon ./backend/server.js",
    "client": "npm start --prefix frontend",
